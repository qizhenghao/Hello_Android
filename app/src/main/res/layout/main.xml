<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/process_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="process_test"/>
        <Button
            android:id="@+id/http_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="http_demo"/>
        <Button
            android:id="@+id/service_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="service_demo"/>

        <Button
            android:id="@+id/main_open_test_ImageView_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="PinnedHeaderListView"/>

        <Button
            android:id="@+id/main_open_test_pinned_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="PinnedHeaderListView"/>

        <Button
            android:id="@+id/main_open_test_clip_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="clip"/>

        <Button
            android:id="@+id/main_open_test_lineview_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:rotation="-15"
            android:text="LineView"
            android:textStyle="bold|italic"/>

        <Button
            android:id="@+id/main_open_test_VideoView_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="VideoView"
            android:visibility="gone"/>

        <Button
            android:id="@+id/main_open_test_muti_iv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_rectangle"
            android:onClick="onClick"
            android:text="MutiImageView"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/main_open_test_CircleMenu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="CircleMenu"/>

        <Button
            android:id="@+id/main_open_test_slideviewpager_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="SlideViewPager"/>

        <Button
            android:id="@+id/main_open_test_popupwindow_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="仿IPhone弹框"/>

        <Button
            android:id="@+id/main_open_test_tween_animation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Tween animation"/>

        <Button
            android:id="@+id/main_open_test_shader_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_test_shader_btn"/>

        <Button
            android:id="@+id/main_open_test_canvas_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_test_canvas_btn"/>

        <Button
            android:id="@+id/main_open_test_custom_viewgroup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_test_custom_viewgroup_btn"/>

        <Button
            android:id="@+id/main_open_test_flowlayout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_test_flowlayout_btn"/>

        <Button
            android:id="@+id/main_open_textviewlink_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_textviewlink_btn"/>

        <Button
            android:id="@+id/main_open_rotation_text_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_rotation_text_btn"/>

        <Button
            android:id="@+id/main_open_transform_matrix_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_transform_matrix_btn"/>

        <Button
            android:id="@+id/main_open_single_touch_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_single_touch_btn"/>

        <Button
            android:id="@+id/main_open_cos_animation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="main_open_cos_animation_btn"/>

        <Button
            android:id="@+id/main_open_scan_animation1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="测试抛物线动画"/>

        <Button
            android:id="@+id/main_open_scan_animation_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="测试扫描动画"/>
    </LinearLayout>
</ScrollView>

